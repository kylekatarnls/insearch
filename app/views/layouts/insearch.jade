!!!
html(lang=lang())
	head
		meta(charset="UTF-8")
		title
			block title
				=§('global.title')
		block section
			mixin meta(name, content)
				meta(name=name, content=content)
			+meta("viewport", "width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, target-densitydpi=device-dpi")
			+meta("apple-mobile-web-app-capable", "yes")
			+meta("format-detection", "telephone=no")
		block css
			!=style('insearch')
		block link
			link(rel="shortcut icon", href=asset('favicon.ico'))
		block head
	body
		#wrap
			.navbar.navbar-inverse.navbar-fixed-top
				.navbar-inner
					.container
						.dropdown
							a#choice-per-page.btn.header-option.dropdown-toggle('data-toggle'="dropdown")
								span.glyphicon.glyphicon-list
							.header-option
								ul.dropdown-menu(role="menu", 'aria-labelledby'="choice-per-page")
									li.dropdown-header
										=§('global.results-per-page') 
									each choice in choiceResultsPerPage
										li
											a('data-value'=choice, href=str_replace('%d', $choice, $resultsPerPageUrl))
												=choice
						.option-panel
							a.btn.header-option
								span.glyphicon.glyphicon-plus-sign
							!=Form::open('/add-url')
								.input-group
									!=Form::text('url', '', 'form-control', §('global.add-url'))
									.input-group-btn
										button.btn.btn-default(type="submit")
											span.glyphicon.glyphicon-plus
							!=Form::close()

						a.brand(href="/", style="float:left;")
							img(src="/img/advanced-search.png", alt=§('global.title'))

						!=Form::open('/')
							#languages.btn-group
								button.btn.btn-default.dropdown-toggle(type="button", 'data-toggle'="dropdown")
									img(src=e("/img/flags/" . lang() . ".png"), width="16", height="16")
									!=" &nbsp; " . array_get($languages, lang(), head($languages)) . " "
									span.caret
								ul.dropdown-menu
									each language, code in languages
										li
											a(href=((isset($q) ? $q : '') . '?language=' . $code), selected=(lang() === $code ? 'selected' : '' ))
												img(src=e("/img/flags/" . $code . ".png"), width="16", height="16")
												!=" &nbsp; " . $language . " "
						!=Form::close()
						.nav-collapse.collapse
							ul.nav
								li
									a(href=e(URL::to('')))
										=§('global.home')
			.container
				block content
				block end-content
		#footer
			p
				=§('global.footer')
				br
				a(href="/most-popular/1")
					=§('global.most-popular')
				=" | "
				a(href="/history/1")
					=§('global.history.link')

		block js
			!=script('insearch')